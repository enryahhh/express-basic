<%- include('../includes/head.ejs') %>
<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
		<h1>LIST PRODUCST</h1>
		<a href="/admin/add-product">Add Product</a>
		<div class="product-list">
			
		<% if (products.length > 0) { %>
			
			<% for(let product of products) { %>
				<div class="card card-product">
					<img src="" alt="">
					<div class="card-body">
						<p><%= product.name %></p>
						<p><%= product.price %></p>
						<p><%= product.stok %></p>
						<p><%= product.desc %></p>
					</div>

					<div class="card-footer">
						<a href="/admin/product/<%= product.id %>" class="btn btn-edit">Edit</a>
						<form action="/admin/product/delete" method="POST">
							<input type="hidden" name="id" value="<%= product.id %>">
							<button  class="btn btn-delete" type="submit" onclick="return confirm('apakah anda yakin akan menghapus data ini?')">Delete</button>
						</form>
					</div>
				</div>
			<% }%>	
		
		<% }else { %>
			<h1 class="">NO PRODUCT</h1>
		<% } %>
		</div>
	</main>

<%- include('../includes/end.ejs') %>